<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape>
            <solid android:color="#ffffff" />

            <stroke
                android:dashGap="5dp"
                android:dashWidth="5dp"
                android:width="1dp"
                android:color="@color/color_alerts_listview_header_text" />

            <padding
                android:bottom="1dp"
                android:right="1dp"
                 />
        </shape>
    </item>
    
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
        </shape>
    </item>
    

</layer-list>