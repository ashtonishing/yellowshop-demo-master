<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:orientation="vertical"
    android:padding="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BBID:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_alerts_listview_header_text" />

                <EditText
                    android:id="@+id/layout_beacon_setup__spinner_bbid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone No.:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_alerts_listview_header_text" />

                    <LinearLayout
                        android:id="@+id/layout_create_offer_linear_layout_zones"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext_background"
                        android:gravity="center|left" >

                        <Spinner
                            android:id="@+id/layout_beacon_setup_zoneid"
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:entries="@array/zone_values" />

                        <ImageButton
                            android:id="@+id/layout_create_offer_down_arrow_zone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:src="@drawable/down_arrow" />
                    </LinearLayout>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_background"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone Name:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_alerts_listview_header_text" />

                    <EditText
                        android:id="@+id/layout_beacon_setup_zonename"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_alerts_listview_header_text" />

                    <EditText
                        android:id="@+id/layout_beacon_setup_lat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:inputType="numberDecimal"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitude:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_alerts_listview_header_text" />

                    <EditText
                        android:id="@+id/layout_beacon_setup_long"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relative Position from  Z-0 beacon"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_alerts_listview_header_text" />

                <EditText
                    android:id="@+id/layout_provisioing_lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:minLines="3"
                    android:singleLine="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:gravity="center|bottom"
            android:background="@drawable/dashed_border"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/layout_beacon_setup_button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="Setup"
                android:textColor="@color/color_alerts_listview_header_text" />

            <Button
                android:id="@+id/layout_beacon_setup_button_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/button_background"
                android:text="Clear"
                android:textColor="@color/color_alerts_listview_header_text" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_powered_by" />

</LinearLayout>