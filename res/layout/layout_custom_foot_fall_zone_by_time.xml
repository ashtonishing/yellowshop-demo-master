<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:collapseColumns="4" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/custom_foot_fall_time_of_the_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_border_view"
            android:gravity="center"
            android:padding="8dp"
            android:text="Zone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        

        <TextView
             android:background="@drawable/right_solid_white_grey_border_view"
            android:id="@+id/custom_foot_fall_zone_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/custom_foot_fall_total_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

</TableLayout>