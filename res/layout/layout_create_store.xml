<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:orientation="vertical"
    android:padding="5dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_price"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:text="Merchant Id"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_alerts_listview_header_text" />

                        <TextView
                            android:id="@+id/layout_offers_desc_end_date_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/star"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_red"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/layout_store_merchant_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:inputType="numberDecimal"
                        android:padding="10dp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merchant Store ID"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_alerts_listview_header_text" />

                        <TextView
                            android:id="@+id/layout_offers_desc_end_date_view0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/star"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_red"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/layout_store_store_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:inputType="numberDecimal"
                        android:padding="10dp" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/latitudeTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:text="Latitude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_alerts_listview_header_text" />

                        <TextView
                            android:id="@+id/layout_offers_desc_end_date_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/star"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_red"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/layout_store_lat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:padding="10dp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Longitude"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_alerts_listview_header_text" />

                        <TextView
                            android:id="@+id/layout_offers_desc_end_date_view2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/star"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_red"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/layout_store_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:padding="10dp" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store Name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_alerts_listview_header_text" />

                        <TextView
                            android:id="@+id/layout_offers_desc_end_date_view3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="@string/star"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/color_red"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/layout_store_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:padding="10dp" >
                    </EditText>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >

                    <EditText
                        android:id="@+id/layout_store_store_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:background="@drawable/edittext_background"
                        android:gravity="left|top"
                        android:hint="Address"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:minLines="3"
                        android:singleLine="false"
                        android:textColor="@color/color_alerts_listview_description_secondary_text" >
                    </EditText>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp" >

                        <ImageView
                            android:id="@+id/layout_store_store_image"
                            android:layout_width="0dp"
                            android:layout_height="170dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_add_picture_gallery" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="4dp" >

                            <EditText
                                android:id="@+id/layout_store_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/edittext_background"
                                android:ems="10"
                                android:hint="City"
                                android:inputType="text" >
                            </EditText>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="State"
                                    android:textColor="@color/color_alerts_listview_description_secondary_text"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/layout_store_state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/edittext_background"
                                    android:inputType="text"
                                    android:singleLine="true" >
                                </EditText>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:paddingTop="2dp"
                                    android:text="Country"
                                    android:textColor="@color/color_alerts_listview_description_secondary_text"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/layout_store_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/edittext_background"
                                    android:inputType="text"
                                    android:singleLine="true" >
                                </EditText>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="4dp" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/pinCodeTxtView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:text="Pincode"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/color_alerts_listview_header_text" />

                                <TextView
                                    android:id="@+id/layout_offers_desc_end_date_view4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:text="@string/star"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/color_red"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/layout_store_pincode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext_background"
                                android:inputType="numberDecimal"
                                android:padding="10dp" >
                            </EditText>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="4dp" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yelp Id"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/color_alerts_listview_header_text" />

                                <TextView
                                    android:id="@+id/layout_offers_desc_end_date_view5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:text="@string/star"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/color_red"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/layout_store_yelp_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext_background"
                                android:inputType="text"
                                android:padding="10dp" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp" >

        <Button
            android:id="@+id/layout_store_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:minWidth="100dp"
            android:text="Save"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_alerts_listview_header_text" />

        <Button
            android:id="@+id/layout_store_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/button_background"
            android:minWidth="100dp"
            android:text="Cancel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_alerts_listview_header_text" />
    </LinearLayout>

</LinearLayout>