<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/custom_click_through_customer_id"
        android:layout_width="0dp"
        android:layout_weight="0.80"
        android:layout_height="match_parent"
        android:background="@drawable/right_border_view"
        android:gravity="center"
        android:padding="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/custom_click_through_top_level_listings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_border_view"
            android:gravity="center"
            android:padding="8dp"
            android:text="Zone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/custom_click_through_merchant_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/right_solid_white_grey_border_view"
            android:gravity="center"
            android:padding="8dp"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/custom_click_through_detail_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</TableRow>